<StackPanel x:Class="BankDataDownloader.Ui.Controls.TabHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" DataContext="{Binding RelativeSource={RelativeSource Self}}" Orientation="Vertical" Width="{DynamicResource TabItemHeadWidth}">
    <Image Source="{Binding IconSource}" Style="{DynamicResource Icon}"/>
    <TextBlock Text="{Binding Text}" HorizontalAlignment="Center" />
</StackPanel>
